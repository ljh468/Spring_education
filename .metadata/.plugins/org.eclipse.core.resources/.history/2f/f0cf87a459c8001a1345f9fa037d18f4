	<!-- 게시판 리스트 쿼리 -->
	<select id="getBoardList" resultType="BoardDTO">
	SELECT * FROM BOARD
	</select>
	<insert id="insertPost" >
	INSERT INTO BOARD(
		POST_NO,
		POST_ID,
		POST_TITLE,
		POST_CONTENT,
		UPD_ID
	)VALUES(
		POST_SEQ.NEXTVAL,
		#{reg_id},
		#{post_title},
		#{post_content},
		#{reg_id}
	)
	</insert>
